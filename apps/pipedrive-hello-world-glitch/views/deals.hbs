<div class="container">
    <div class="row">
        <div class="col">
            <h1>Oh hi, {{name}}</h1>
            <h3>Pick a deal:</h3>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="list-group">
                {{#each deals}}
                    <a href="/deals/{{id}}" class="list-group-item"><strong>{{title}}</strong> (ID: {{id}})</a>
                {{/each}}
            </div>
        </div>
    </div>
</div>